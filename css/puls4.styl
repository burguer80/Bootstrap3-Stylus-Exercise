azul = #22BCE0
naranja = #DD4F24
gris_texto = #7A7A7A
gris_oscuro = #444

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%
	
	h3
		font-size 14px
		font-weight normal

		strong
			display block //salto de linea

		.mejor
			&:before
			&:after
				content " - "

header 
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)//Efecto de sombreado en el encabezado con negro con trasnparencia
	color white
	overflow hidden //cuando se cambia la resolucion se sale el logo 
	padding 0.5em
	position relative
	z-index 2

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px
	
	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none


		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				content "\e603"
				display inline-block
				font-family "iconitos"
				margin 0 3px 0 0
				text-shadow none


		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 69

			img 
				border-radius 50% //redondea la imgen
				width 50px
		.flechita
				background naranja
				color white
				display block
				padding 2px
				position absolute
				right 0
				text-align right
				text-decoration none
				top 15px
				width 50%
				z-index 0

				&:after
					content "\e601"
					display block
					font-family "iconitos"
					margin 1px 0 0 1px
					text-shadow 1px 1px 0px black


nav 
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent //triangulo
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0
		

	.menu
		height 40px
		line-height 40px // hace mas alto el espacio el renglon del menu
		margin 0
		padding 0
		overflow-x auto //activa el scroll vertical
		white-space nowrap // desactiva el wrap que hace el salto de linea

		li
			display inline-block //list vertical sin bullets

			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em //hacen mas grande el espacio de cada li
				text-decoration none

				&:hover
					background rgba(black,0.1)

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em // redondea esquinas inferiores
		box-shadow 2px 2px 10px rgba(black, 0.5) // sombreado
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden //recalcula la altura para que se tome en cuenta

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					padding 2px 5px
					margin 0 1em 0 0
					text-decoration none

				.estrellita
					text-decoration none

					&:after
						color #FCB92D
						content "\e602"
						font-family "iconitos"
						font-size 1.1em

			.votos
				float left

				.down
				.up
					text-decoration none
					&:before
						font-family "iconitos"
						font-size 1.5em
						vertical-align middle

				.down
					color red
					&:before
						content "\e601"

				.up
					color green
					&:before
						content "\e600"

		.descripcion
			
			.detalles
				height 160px
				margin-left 130px // 10px pero se le agregan al width del img
				

				.autor
					margin 0.5em 0 2em 0 // alinea el autor

				.fecha 
					float right
					margin 0 1em 0 0 
				
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left //Hace que el texto este al lado de la foto

				img
					height 160px
					vertical-align top
					width 120px

